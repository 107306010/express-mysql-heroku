<!DOCTYPE html>
<html>

<head>
  <title><%= title %>List</title>
  <script type="text/javascript">

    function Edit(id) {
      window.location.href = "/edit?id=" + id;
    }

    function Delete(id) {
      var rs = confirm('Confirm to delete?');
      if (rs) {
        window.location.href = "/restaurantDelete?id=" + id;
      }
    }

    function Search() {
      var restaurantId = document.getElementsByName('sRestaurantId')[0].value;
      window.location.href = "/?restaurant=" + restaurantId;;
    }

  </script>
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
  <h1><%= title %>List</h1>
  <div class="search">
    <label>RestaurantId：</label>
    <input type="text" name="sRestaurantId" value="<%=restaurant%>" placeholder="input the RestaurantId">
    <input type="button" name="sSearch" value="Search" onclick="Search();">
  </div>
  <table>
    <tr>
      <th>id</th>
      <th>address</th>
      <th>telephone</th>
      <th>營業時間</th>
      <th>類別</th>
      <th>店名</th>
    </tr>
    <% for ( var i = 0 ; i < data.length ; i++){ %>
    <tr>
      <td>
        <%= data[i].id  %>
      </td>
      <td>
        <%= data[i].address  %>
      </td>
      <td>
        <%= data[i].telephone  %>
      </td>
      <td>
        <%= data[i].營業時間  %>
      </td>
      <td>
        <%= data[i].類別  %>
      </td>
      <td>
        <%= data[i].店名  %>
      </td>
      <td>
        <input type="button" name="edit" value="Edit" onclick="Edit('<%= data[i].id  %>');" />
        <input type="button" name="delete" value="Delete" onclick="Delete('<%= data[i].id  %>');" />
      </td>
    </tr>
    <% } %>
  </table>
  <input type='submit' value='Add' onclick="javascript: location.href='add'">
</body>

</html>